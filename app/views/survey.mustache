{{<layout}}

  {{$applicationContent}}
    <h1>Survey</h1>
    <form method="POST">
      <input class="visually-hidden" data-test-id="param-ref" name="ref" type="text" value="{{ref}}">
      <input class="visually-hidden" data-test-id="param-type" name="type" type="text" value="{{type}}">
      <div class="form-group">
        <label class="form-label" for="name">Your name</label>
        <input data-test-id="field-name" class="form-control" type="text" name="name" value="{{name}}">
      </div>
      <div class="form-group">
        <label class="form-label" for="surname">Your surname</label>
        <input data-test-id="field-surname" class="form-control" type="text" name="surname" value="{{surname}}">
      </div>

      <input class="button" type="submit" value="Save">
    </form>

  {{/applicationContent}}

{{/layout}}
