{{<layout}}

  {{$applicationContent}}
      <div class="error-summary" role="group" aria-labelledby="error-summary-heading" tabindex="-1">

        <h1 class="heading-medium error-summary-heading" id="error-summary-heading" data-test-id="message">
          {{message}}
        </h1>

        <p>
          You can close this tab now.
        </p>

      </div>

    {{#error}}
      <div>
        <h1>{{ message }}</h1>
        <h2>{{ status }}</h2>
        <pre>{{ stack }}</pre>
      </div>
    {{/error}}

  {{/applicationContent}}

{{/layout}}
