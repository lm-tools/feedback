        <div class="form-hint text radio-hint"> </div>
        <div class="form-error validation-message"> </div>

         {{#options.transferableSkillsHelped}}
          <label for="{{name}}-{{value}}" class="block-label">
            <input id="{{name}}-{{value}}" data-test-id="{{name}}-{{value}}" type="radio" name="{{name}}" value="{{value}}">
            {{label}}
          </label>
        {{/options.transferableSkillsHelped}}
      </fieldset>
    </div>

    <div class="whyTypesUpdateCv-visibility form-group js-hidden" id="whyTypesUpdateCvHelped-panel">
      <fieldset class="inline">
        <legend class="form-label-bold text" data-test-id="question-updateCvHelped">
