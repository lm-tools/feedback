{{<layout}}

  {{$applicationContent}}

  <h2 class="heading-xlarge">Give feedback</h2>

  <form method="POST">

    <div class="form-group">

      <h3 class="form-label-bold text" data-test-id="question-why-types">{{labels.whyTypes}}</h3>
      <p>Select all that apply</p>

      <fieldset>

        <legend class="visuallyhidden">{{labels.whyTypes}}</legend>

        {{#options.whyTypes}}
          <label class="block-label" for="{{value}}">
            <input id="{{value}}" data-test-id="{{value}}" name="{{name}}" type="checkbox" value="{{value}}" data-toggle-visibility-for=".{{value}}-visibility">
            {{label}}
          </label>
        {{/options.whyTypes}}

        <div class="panel panel-border-narrow js-hidden whyTypesOther-visibility" data-test-id="other-reason-panel">
          <label for="why_other_answer" class="form-label">
            {{labels.whyTypesOtherReason}}
          </label>
          <input type="text" id="why_other_answer" data-test-id="why-other-answer" name="whyTypesOtherReason">
        </div>

      </fieldset>
    </div>

    <div class="whyTypesStartGoals-visibility form-group js-hidden" id="whyTypesStartGoalsHelped-panel">
      <fieldset class="inline">
        <legend class="form-label-bold text" data-test-id="question-startGoalsHelped">
          {{labels.startGoalsHelped}}
        </legend>
        <div class="form-hint text radio-hint"> </div>
        <div class="form-error validation-message"> </div>

        {{#options.startGoalsHelped}}
          <label for="{{name}}-{{value}}" class="block-label">
            <input id="{{name}}-{{value}}" data-test-id="{{name}}-{{value}}" type="radio" name="{{name}}" value="{{value}}">
            {{label}}
          </label>
        {{/options.startGoalsHelped}}

      </fieldset>
    </div>

    <div class="whyTypesBroadenGoals-visibility form-group js-hidden" id="whyTypesBroadenGoalsHelped-panel">
      <fieldset class="inline">
