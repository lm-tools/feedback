            {{label}}
          </label>
        {{/options.otherHelped}}
      </fieldset>
    </div>


    <div class="form-group">
      <fieldset class="inline">
        <legend class="form-label-bold text" data-test-id="question-claimantChange">
          {{labels.claimantChange}}
        </legend>
        <div class="form-hint text radio-hint"> </div>
        <div class="form-error validation-message"> </div>

        {{#options.claimantChange}}
          <label for="{{name}}-{{value}}" class="block-label">
            <input id="{{name}}-{{value}}" data-test-id="{{name}}-{{value}}" type="radio" name="{{name}}" value="{{value}}">
            {{label}}
          </label>
        {{/options.claimantChange}}

      </fieldset>
    </div>


    <div class="form-group">
      <label class="form-label-bold" for="claimantFeedback" data-test-id="question-claimantFeedback">
        {{labels.claimantFeedback}}
      </label>
      <textarea id="claimantFeedback" data-test-id="claimantFeedback" class="text textarea-full" rows="6" name="claimantFeedback"></textarea>
    </div>

    <div class="form-group">
      <label class="form-label-bold" for="agentFeedback" data-test-id="question-agentFeedback">
        {{labels.agentFeedback}}
      </label>
      <textarea id="agentFeedback" data-test-id="agentFeedback" class="text textarea-full" rows="6" name="agentFeedback"></textarea>
    </div>


    <fieldset class="star-rating form-group">
      <legend>{{labels.rating}}</legend>
      <div class="rating-options-group rating-options-group-enabled">
        {{#options.rating}}
          <input type="radio" id="{{name}}-{{value}}" data-test-id="{{name}}-{{value}}" name="{{name}}" value="{{value}}">
          <label class="full" for="{{name}}-{{value}}"></label>
        {{/options.rating}}
      </div>
    </fieldset>

      <input class="button" type="submit" value="Save">
    </form>

  {{/applicationContent}}

{{/layout}}
